<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CoTera.OptionsPage"
             Title="Options"
             xmlns:viewmodel="clr-namespace:CoTera.ViewModels">
    
    <Grid RowDefinitions=".10*,.20*,.20*,.20*,.20*,.10*"
          ColumnDefinitions=".20*,.60*,.20*"
          Padding="10"
          RowSpacing="50"
          ColumnSpacing="10">

        <Picker Grid.Row="1"
                Grid.Column="1"
                Title="Wybierz Rok"
                ItemsSource="{Binding LoadedYears}"
                SelectedIndex="{Binding SelectedYearIndex}"
                >
        </Picker>

        <Picker Grid.Row="2"
                Grid.Column="1"
                Title="Wybierz Lab"
                ItemsSource="{Binding LoadedLabs}"
                SelectedIndex="{Binding SelectedLabIndex}"
                >
        </Picker>

        <Button 
            Grid.Row="3"
            Grid.Column="1"
            Text="Zapisz i wróć"
            Clicked="OnSaveAndReturn"/>

        <Button 
            Grid.Row="4"
            Grid.Column="1"
            Text="Informacje prawne"
            Clicked="OnLegalInformationClick"/>

    </Grid>
</ContentPage>