<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CoTera.OptionsPage"
             Title="Options"
             xmlns:viewmodel="clr-namespace:CoTera.ViewModels"
             Shell.NavBarIsVisible="False">
    
    <Grid RowDefinitions=".05*,.10*,.10*,.10*,.10*,.10*,.10*"
          ColumnDefinitions=".05*,.90*,.05*"
          Padding="10"
          RowSpacing="50"
          ColumnSpacing="10"
          BackgroundColor="#512CD4">

        <Picker Grid.Row="1"
                Grid.Column="1"
                Title="Wybierz Kolegium"
                TitleColor="White"
                TextColor="White"
                ItemsSource="{Binding Collages}"
                SelectedIndex="{Binding SelectedCollageIndex}"
                SelectedIndexChanged="CollageIndexChanged"/>


        <Picker Grid.Row="2"
                Grid.Column="1"
                Title="Wybierz Kierunek"
                TitleColor="White"
                TextColor="White"
                ItemsSource="{Binding Majors}"
                SelectedIndex="{Binding SelectedMajorIndex}"
                SelectedIndexChanged="MajorIndexChanged"/>


        <Picker Grid.Row="3"
                Grid.Column="1"
                Title="Wybierz Rok Studiów"
                TitleColor="White"
                TextColor="White"
                ItemsSource="{Binding YearsOfStudies}"
                SelectedIndex="{Binding SelectedYearOfStudiesIndex}"/>


        <Button Grid.Row="4"
                Grid.Column="1"
                BackgroundColor="#006BD1"
                TextColor="White"
                Text="Zapisz i wróć"
                Clicked="OnSaveAndReturn"/>
        

        <Button Grid.Row="5"
                Grid.Column="1"
                BackgroundColor="#006BD1"
                TextColor="White"
                Text="Informacje prawne"
                Clicked="OnLegalInformationClick"/>

    </Grid>
</ContentPage>