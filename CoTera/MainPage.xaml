<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CoTera.MainPage"
             xmlns:viewmodel="clr-namespace:CoTera.ViewModels"
             Shell.NavBarIsVisible="False">

    <Grid RowDefinitions=".10*,.80*,.10*"
          ColumnDefinitions=".20*,.60*,.20*"
          Padding="10"
          RowSpacing="10"
          ColumnSpacing="10"
          BackgroundColor="#512CD4">
        
        <WebView x:Name="PdfViewer" 
                 VerticalOptions="FillAndExpand" 
                 HorizontalOptions="FillAndExpand"
                 Grid.ColumnSpan="3"
                 Grid.RowSpan="2"
                 />


        <Button Grid.Row="2"
                Grid.Column="0"
                BackgroundColor="#006BD1"
                CornerRadius="30"
                FontSize="24"
                TextColor="White"
                Text="⟳"
                Clicked="OnRefreshClicked"/>

        <Button Grid.Row="2"
                Grid.Column="3"
                BackgroundColor="#006BD1"
                CornerRadius="30"
                FontSize="24"
                TextColor="White"
                Text="⚙"
                Clicked="OnOptionsClicked"/>

    </Grid>
    
</ContentPage>
